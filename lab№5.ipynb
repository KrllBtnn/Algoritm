   "metadata": {},
   "outputs": [],
   "source": [
    "from abc import ABC, abstractmethod"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 25,
   "id": "19d82f7a",
   "metadata": {},
   "outputs": [],
   "source": [
    "class Figure(ABC):\n",
    "    \n",
    "    @abstractmethod\n",
    "    def area(self):\n",
    "        pass\n",
    "    \n",
    "    @abstractmethod\n",
    "    def perimeter(self):\n",
    "        pass\n",
    "    \n",
    "    def calculate_area(self):\n",
    "        n = len(self.coordinates)\n",
    "        S = 0\n",
    "    \n",
    "        for i in range(n):\n",
    "            j = (i + 1) % n\n",
    "            S += self.coordinates[i][0] * self.coordinates[j][1]\n",
    "            S -= self.coordinates[j][0] * self.coordinates[i][1]\n",
    "        S = abs(S) / 2\n",
    "        self._area = S\n",
    "        \n",
    "    def calculate_perimeter(self):\n",
    "        n = len(self.coordinates)\n",
    "        perimeter = 0\n",
    "\n",
    "        for i in range(n):\n",
    "            if i != n - 1:\n",
    "                x1 = self.coordinates[i][0]\n",
    "                x2 = self.coordinates[i + 1][0]\n",
    "                y1 = self.coordinates[i][1]\n",
    "                y2 = self.coordinates[i + 1][1]\n",
    "            else:\n",
    "                x1 = self.coordinates[i][0]\n",
    "                x2 = self.coordinates[0][0]\n",
    "                y1 = self.coordinates[i][1]\n",
    "                y2 = self.coordinates[0][1]\n",
    "            perimeter += ((x2 - x1)**2 + (y2 - y1)**2)**0.5\n",
    "\n",
    "        self._perimeter = perimeter\n",
    "        \n",
    "    @property\n",
    "    def area(self):\n",
    "        self.calculate_area()\n",
    "        return self._area\n",
    "    \n",
    "    @property\n",
    "    def perimeter(self):\n",
    "        self.calculate_perimeter()\n",
    "        return self._perimeter"
   ]
